{
    "name": "@ac-grid/ac-grid-site",
    "version": "0.1.0",
    "description": "AC Grid official documentation and examples",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:pages": "cross-env NODE_ENV=production GITHUB_PAGES=true CUSTOM_DOMAIN=true vite build",
        "preview": "vite preview",
        "deploy:pages": "pnpm build:pages && gh-pages -d dist",
        "test": "vitest --run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "test:ui": "vitest --ui",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "@unocss/preset-attributify": "^66.3.3",
        "@unocss/preset-uno": "^66.3.3",
        "@ac-grid/core": "workspace:*",
        "@wsxjs/wsx-core": "^0.0.20",
        "@wsxjs/wsx-router": "workspace:*",
        "@wsxjs/wsx-base-components": "workspace:*"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/user-event": "^14.6.1",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitest/ui": "^3.2.4",
        "@wsxjs/wsx-vite-plugin": "^0.0.20",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.0",
        "gh-pages": "^6.1.1",
        "happy-dom": "^18.0.1",
        "typescript": "^5.0.0",
        "unocss": "^66.3.3",
        "vite": "^7.3.1",
        "vitest": "^3.2.4"
    }
}
