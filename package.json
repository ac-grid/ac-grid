{
    "name": "@systembug/ac-grid-monorepo",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "author": "Albert Li <albert_lee@hotmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/systembugtj/ac-grid"
    },
    "homepage": "http://systembugtj.github.io/ac-grid",
    "scripts": {
        "dev": "turbo run dev",
        "dev:wsx": "pnpm --filter @systembug/demo-wsx dev",
        "dev:core": "pnpm --filter @systembug/ac-grid-core dev",
        "build": "turbo run build",
        "build:core": "pnpm --filter @systembug/ac-grid-core build",
        "build:wsx": "pnpm --filter @systembug/demo-wsx build",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{ts,tsx,wsx,md,json}\"",
        "storybook": "turbo run storybook",
        "build-storybook": "turbo run build-storybook"
    },
    "devDependencies": {
        "prettier": "^3.4.2",
        "turbo": "^2.0.0",
        "typescript": "^5.6.2"
    },
    "packageManager": "pnpm@9.0.0",
    "volta": {
        "node": "22.0.0"
    },
    "license": "MIT"
}
