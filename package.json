{
    "name": "@ac-grid/monorepo",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "author": "Albert Li <albert_lee@hotmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/systembugtj/ac-grid"
    },
    "homepage": "http://systembugtj.github.io/ac-grid",
    "scripts": {
        "dev": "pangu",
        "dev:wsx": "pnpm --filter @ac-grid/demo-wsx dev",
        "dev:core": "pnpm --filter @ac-grid/core dev",
        "build": "turbo run build",
        "build:core": "pnpm --filter @ac-grid/core build",
        "build:wsx": "pnpm --filter @ac-grid/demo-wsx build",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{ts,tsx,wsx,md,json}\"",
        "storybook": "turbo run storybook",
        "build-storybook": "turbo run build-storybook"
    },
    "devDependencies": {
        "prettier": "^3.4.2",
        "turbo": "^2.0.0",
        "typescript": "^5.6.2",
        "@systembug/pangu": "^0.0.10"
    },
    "packageManager": "pnpm@10.10.0",
    "volta": {
        "node": "22.12.0",
        "pnpm": "10.10.0"
    },
    "license": "MIT"
}
